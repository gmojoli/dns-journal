= simple_form_for [@dns_zone.domain, @dns_zone, @soa_section] do |f|
  - if @soa_section && @soa_section.errors.any?
    = render 'layouts/error_explanation', resource: @soa_section, name: 'soa section'
  .row
    .large-6.columns
      .field
        = f.label :mname, 'MNAME'
        = f.text_field :mname, required: true
    .large-6.columns
      .soa_explain_panel
        .panel The master dns server for the zone
  .row
    .large-6.columns
      .field
        = f.label :rname, 'RNAME'
        = f.text_field :rname, required: true
    .large-6.columns
      .soa_explain_panel
        .panel An email address for someone responsible for the domain (with the @ replaced with a .)
  .row
    .soa_numbers
      .large-3.columns
        .field
          = f.label :refresh
          = f.number_field :refresh
      .large-3.columns
        .field
          = f.label :retry
          = f.number_field :retry
      .large-3.columns
        .field
          = f.label :expire
          = f.number_field :expire
      .large-3.columns
        .field
          = f.label :minimum
          = f.number_field :minimum
  .row
    .large-6.columns
      .actions
        = f.submit nil, :class => "button"
