<h1>Listing resource_records</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Value</th>
      <th>Rfc</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @resource_records.each do |resource_record| %>
      <tr>
        <td><%= resource_record.resource_type %></td>
        <td><%= resource_record.value %></td>
        <td><%= resource_record.rfc %></td>
        <td><%= resource_record.description %></td>
        <td><%= link_to 'Show', resource_record %></td>
        <td><%= link_to 'Edit', edit_resource_record_path(resource_record) %></td>
        <td><%= link_to 'Destroy', resource_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

