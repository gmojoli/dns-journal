= simple_form_for [@dns_zone.domain, @dns_zone, @resource_record = ResourceRecord.new] do |f|
  - if @resource_record.errors.any?
    #error_explanation
      %h2
        = pluralize(@resource_record.errors.count, "error")
        prohibited this resource_record from being saved:
      %ul
        - @resource_record.errors.full_messages.each do |msg|
          %li= msg
  .row
    .large-3.columns
      = f.label :resource_type, class: "right inline"
    .large-3.columns.left
      = select(:resource_record, :resource_type, ResourceRecord.available_resource_types.keys, {:include_blank => true})
    .large-3.columns
      %span.has-tip{"data-tooltip" => "", :title => "an MX require a priority value"}
        = f.label :option, class: "right inline"
    .large-3.columns
      = f.number_field :option
  .row
    .large-3.columns
      = f.label :name, class: "right inline"
    .large-9.columns
      = f.text_field :name
  .row
    .large-3.columns
      = f.label :value, class: "right inline"
    .large-9.columns
      = f.text_field :value
  .row
    .large-3.columns
      = f.label :option, class: "right inline"
    .large-9.columns
      = f.number_field :option
  .row
    .large-3.columns
      = f.label :description, class: "right inline"
    .large-9.columns
      = f.text_area :description
  .row
    .large-3.columns.large-offset-3
      = f.submit "Save", :class => "red_button"
